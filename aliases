# =================
# dotfiles Aliases
# =================
alias dotf='cd ~/dotfiles'

# =================
# OSX
# =================
# Hide/show all desktop icons (useful when presenting)
alias hide_desktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias show_desktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Hide/show hidden files in Finder
alias hide_files="defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder"
alias show_files="defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder"

# =================
# GIT
# =================
# Adding Branches
alias ga='git add'
alias gaa='git add .'
alias gaaa='git add -A'

# List All Branches
alias gba='git branch -a'
alias gbr='git branch -r'

# Delete Branches
alias gbd='git branch -d'
alias gbD='git branch -D'

# Commit Branches
alias gc='git commit'
alias gcm='git commit -m'

# Status of Branches
alias gs='git status -s'
alias gss='echo ""; echo "*********************************************"; echo -e "   DO NOT FORGET TO PULL BEFORE COMMITTING"; echo "*********************************************"; echo ""; git status'

# Pull from Remote Branch
alias gp='git pull'
alias gd='git diff'

# Push to Branch
alias gpsh='git push'
alias gpshu='git push --set-upstream origin'

# Show Commit History
alias gl='git log'

# Initialize Repository
alias gii='git init'

alias c='code .'
alias l="ls" # List files in current directory
alias ll="ls -al" # List all files in current directory in long list format
alias o="open ." # Open the current directory in Finder
alias sasswatch='sass --watch scss:css'

# VS Code and ZSH
alias zfrash='source ~/.zshrc' # refresh zshrc
alias zfrach='code ~/.zshrc' # open zshrc in vscode